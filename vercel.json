{
  "builds": [
    {
      "src": "api/**/*.php",
      "use": "vercel-php@0.7.4"
    }
  ],
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "routes": [
    { "src": "/(.*)",  "dest": "/api/index.php" }
  ],
  "buildCommand": "composer install --no-dev --optimize-autoloader"
}